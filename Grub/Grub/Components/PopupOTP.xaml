<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grub.Components.PopupOTP">
  <ContentView.Content>
        <Frame Style="{StaticResource frame1}"
       CornerRadius="10" 
       >
            <StackLayout Orientation="Vertical" >
                <Label Text="Account Created!" Style="{DynamicResource Subtitle}" HorizontalOptions="Center" />
                <Label Text="Your account had beed created successfully " Style="{DynamicResource SubTitle 1}" HorizontalOptions="Center" />
                <Label Text="Please sign in to use your account and enjoy" Style="{DynamicResource Caption2}" HorizontalOptions="Center"  />
                <Button Style="{DynamicResource ButtonStyle}" Text="Take me to sign in"/>
               
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>